<!DOCTYPE html>
<html>
<head>
  <title>Profiles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container text-center mt-4">
    <h1 class="mb-3">Profile List</h1>
    <p class="mb-3">Feel free to explore and find new friends!!</p>
    <a href="/" class="btn btn-primary mb-4">Go Home</a>

    <!-- Centered search bar -->
    <form action="/profiles" method="get" class="d-flex justify-content-center mb-5">
      <input 
        type="text" 
        name="q" 
        class="form-control w-50 me-2"
        placeholder="Search by name, age, or major." 
        value="<%= typeof q !== 'undefined' ? q : '' %>">
      <button type="submit" class="btn btn-success">Search</button>
    </form>
  </div>

  <main>
    <div class="container mt-4">
      <div class="row">
        <% profiles.forEach(profile => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h5 class="card-title"><%= profile.Name %></h5>
                <p class="card-text"><strong>Age:</strong> <%= profile.Age %></p>
                <p class="card-text"><strong>Year:</strong> <%= profile.Year %></p>
                <p class="card-text"><strong>Major:</strong> <%= profile.Major %></p>
                <p class="card-text"><strong>Classes:</strong> <%= profile.Classes %></p>
                <p class="card-text"><strong>Interests:</strong> <%= profile.Interests %></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </main>
</body>
</html>
